<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.david.noted.SearchLocationActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where you want to go?"
        android:textSize="20sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.116"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <GridLayout
        android:layout_width="357dp"
        android:layout_height="252dp"
        android:layout_alignParentStart="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintVertical_bias="0.621"
        android:id="@+id/gridLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">


        <Button
            android:id="@+id/userLocationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_location_city_black_24dp"
            android:onClick="runUserLocation"
            android:text="Sungai loooooooog"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/othersId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:onClick="runOthers"
            android:text="others"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/groceriesId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
            android:onClick="runNearByGroceries"
            android:text="Groceries"
            android:textColor="@android:color/holo_blue_light" />


        <Button
            android:id="@+id/cafesId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_local_cafe_black_24dp"
            android:onClick="runNearByCafes"
            android:text="Cafes"
            android:textColor="@android:color/holo_green_light" />

        <Button
            android:id="@+id/pharmaciesId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_local_pharmacy_black_24dp"
            android:onClick="runNearByPharmacies"
            android:text="Pharmacies"
            android:textColor="@android:color/holo_red_light" />

        <Button
            android:id="@+id/atmsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_local_atm_black_24dp"
            android:onClick="runNearByATMs"
            android:text="ATMS"
            android:textColor="@android:color/holo_orange_light" />

        <Button
            android:id="@+id/restaurantsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_restaurant_black_24dp"
            android:onClick="runNearByRestaurants"
            android:text="Restaurants"
            android:textColor="@android:color/holo_purple" />

        <Button
            android:id="@+id/gasStationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:drawableLeft="@drawable/ic_local_gas_station_black_24dp"
            android:onClick="runNearByGasStation"
            android:text="Gas Stations"
            android:textColor="@android:color/holo_green_light" />


    </GridLayout>

    <!--
    <fragment
        android:id="@+id/locationReminderSectionId"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="15dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />
        -->
</android.support.constraint.ConstraintLayout>
